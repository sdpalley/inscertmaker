<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.0/css/jquery.dataTables.css">


<div class="container">
  <div class="row">
    <div class="col-lg-12" >
<h3 stye="text-align:center">My Agreements</h3>
<div class="table-responsive">
<table id="myTable" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Plaintiff</th>
      <th>Defendant</th>
      <th>Settle amount</th>
      <th>Pay date</th>
      <th>Court</th>
      <th>Confidential</th>
      <th>Choice of law</th>
      <th>Signature block</th>
      <th>Case type</th>
      <th>Notice to</th>
      <th>Indemnity</th>
      <th>Required</th>
      <th Options</th>
    </tr>
  </thead>

  <tbody>
    <% @settle_agrees.each do |settle_agree| %>
      <tr>
        <td><%= settle_agree.plaintiff %></td>
        <td><%= settle_agree.defendant %></td>
        <td><%= settle_agree.settle_amount %></td>
        <td><%= settle_agree.pay_date %></td>
        <td><%= settle_agree.court %></td>
        <td><%= settle_agree.confidential %></td>
        <td><%= settle_agree.choice_of_law %></td>
        <td><%= settle_agree.signature_block %></td>
        <td><%= settle_agree.case_type %></td>
        <td><%= settle_agree.notice_to %></td>
        <td><%= settle_agree.indemnity %></td>
        <td><%= settle_agree.required %></td>
        <td><%= link_to 'Show | ', settle_agree %>
        <%= link_to 'Edit |', edit_settle_agree_path(settle_agree) %>
        <%= link_to 'Destroy', settle_agree, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>
</div>
<%= link_to 'New Form', new_settle_agree_path, :style=>"color:white; background-color:black; padding:10px" %>
<br>
</div>
</div>
</div>



<script src ="//cdn.datatables.net/1.10.0/js/jquery.dataTables.js"></script>

<script>
$(document).ready(function(){
    $('#myTable').dataTable();
});

</script>